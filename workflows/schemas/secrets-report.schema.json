{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Secret Scanning Report",
  "type": "object",
  "required": ["repository", "ref", "findings"],
  "properties": {
    "repository": {
      "type": "string"
    },
    "ref": {
      "type": "string"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["file", "secret_type", "state"],
        "properties": {
          "file": {
            "type": "string"
          },
          "line": {
            "type": "integer",
            "minimum": 1
          },
          "secret_type": {
            "type": "string"
          },
          "state": {
            "type": "string",
            "enum": ["confirmed", "ignored", "false_positive"]
          },
          "evidence": {
            "type": "string"
          }
        }
      }
    }
  }
}
